def count_zeros(n):
    # Convert the number to a string to easily count '0's
    return str(n).count('0')

# Test the function
def test_count_zeros():
    test_cases = [
        10023,   # 2 zeros
        507000,  # 3 zeros
        123456,  # 0 zeros
        900,     # 2 zeros
        0,       # 1 zero (zero itself)
    ]
    
    for n in test_cases:
        result = count_zeros(n)
        print(f"Number of zeros in {n} is: {result}")

# Run the tests
test_count_zeros()
